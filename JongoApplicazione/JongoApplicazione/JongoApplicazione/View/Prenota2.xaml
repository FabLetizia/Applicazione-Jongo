        <!-- Immagine/ Animazione Jongo -->
        <StackLayout Grid.Column="1" Grid.Row="0" Padding="0,-125,0,0" Margin="15" Grid.ColumnSpan="3">
            <Image Source="logo_rettangolare2.png"
                       HeightRequest="400"
                       WidthRequest="400"
                       VerticalOptions="Start"
                       HorizontalOptions="End"/>
        </StackLayout>






        <!-- Titolo della pagina -->
        <StackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalOptions="Center" VerticalOptions="Center" >
            <Label Text="DATA E ORARIO"  Font="Title" TextColor="DarkViolet"/>
        </StackLayout>


        <StackLayout   Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal">

            <!-- Data -->
            <DatePicker  x:Name="Data"
                                 MinimumDate="01/01/1921"
                                 MaximumDate="01/01/2025"
                                 HorizontalOptions="FillAndExpand"
                                 FontSize="Large"
                                 FontAttributes="Bold"
                                 TextColor="Violet"
                                 BackgroundColor="LightYellow"
                         />

            <!-- Orario -->
            <TimePicker
                                x:Name="Orario"
                                Time="00:00"
                                HorizontalOptions="FillAndExpand"
                                IsEnabled="True"
                                FontSize="Large"
                                FontAttributes="Bold"
                                TextColor="Violet"
                                BackgroundColor="LightYellow"
                                />

            </StackLayout>
               

          <!--Entry per inserire info extra-->
            <Entry Placeholder="INFO EXTRA" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" FontSize="Large" FontAttributes="Bold" PlaceholderColor="Violet" BackgroundColor="LightYellow"/>

                   



