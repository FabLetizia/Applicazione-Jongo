    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="JongoApplicazione.View.Prenota3">
    <ContentView.Content>
         <Grid>
                  <!--Divido la pagina in 5 colonne e 5 righe-->
