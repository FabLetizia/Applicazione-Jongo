             <!-- TITOLO -->
             <StackLayout> 
        <StackLayout HorizontalOptions="Center" VerticalOptions="Start" Margin="0,30,0,0">
            <Label Text="DETTAGLI"  FontAttributes="Bold" FontSize="Subtitle" TextColor="{StaticResource ColoreTitoli}"/>
            </StackLayout>

             <!-- SOTTOTITOLO -->
              <StackLayout Margin="56,30,0,0">
