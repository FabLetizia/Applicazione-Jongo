             <Frame BackgroundColor="Aqua" Grid.Row="1" Grid.Column="0" />
             <Frame BackgroundColor="Aqua" Grid.Row="1" Grid.Column="1" />
             <Frame BackgroundColor="Aqua" Grid.Row="1" Grid.Column="2" />
