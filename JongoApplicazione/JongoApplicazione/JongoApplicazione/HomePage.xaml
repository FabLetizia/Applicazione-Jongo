                    CornerRadius="50"
                    Text="CONTATTACI"
                    BackgroundColor="#83738E"
                    TextColor="#FFDE00">
            </Button>

             <!--Bottone 5 -->
            <!--<StackLayout Grid.Column="3" Grid.Row="4">
                <Button Text="Bottone 1"
                        BackgroundColor="Blue"/>
            </StackLayout>-->

            <Button Grid.Column="3" Grid.Row="5" Grid.RowSpan="2"
                    CornerRadius="50"
                    Text="CRONOLOGIA"
