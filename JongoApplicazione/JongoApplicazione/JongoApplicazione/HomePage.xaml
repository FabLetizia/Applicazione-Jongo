                    TextColor="#FFDE00">
            </Button>

            <!-- Bottone mappa -->
            <StackLayout Grid.Column="2" Grid.Row="8" VerticalOptions="Start">
                <Button Text="mappa"
                    BackgroundColor="#83738E"
                    TextColor="#FFDE00"/>
            </StackLayout>

        </Grid>


    
