<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JongoApplicazione.JongoApplicazione.Impostazioni"
             BackgroundColor="#FFCCFF">
    <ContentPage.Content>
        <Grid>
            <!--Divido la pagina in 3 colonne e 4 righe-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>




            </Grid.RowDefinitions>

            <StackLayout Grid.Column="2" Grid.Row="0" Grid.RowSpan="1" VerticalOptions="Fill">
                <Label 
                    FontSize="Large"
                    FontAttributes="Bold"
                    Text="IMPOSTAZIONI"
                    TextColor="#FFDE00"
                    TextDecorations="None"
                    BackgroundColor="Black"
                    >
                    
                </Label>
                
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"  HorizontalOptions="StartAndExpand" 
                         VerticalOptions="Center" Orientation="Horizontal">
                <Label
                    FontSize="Large"
                    WidthRequest="100"
                    FontAttributes="Bold"
                    Text="Generali"
                    BackgroundColor="Black"
                    TextColor="#FFCCFF"
                    TextDecorations="None">
                    
                </Label>
                
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"  HorizontalOptions="StartAndExpand" 
                         VerticalOptions="End" Orientation="Horizontal">
                <Label
                    x:Name="Nome"
                    WidthRequest="100"
                    FontSize="Title"
                    FontAttributes="Bold"
                    BackgroundColor="LightYellow"
                    TextColor="#FFDE00"
                    TextDecorations="None"
                    >
                </Label>
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"  HorizontalOptions="StartAndExpand" 
                         VerticalOptions="Start" Orientation="Horizontal">
                <Label
                    x:Name="Cognome"
                    WidthRequest="130"
                    FontSize="Title"
                    FontAttributes="Bold"
                    BackgroundColor="LightYellow"
                    TextColor="#FFDE00"
                    TextDecorations="None"
                    >
                </Label>
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"  HorizontalOptions="StartAndExpand" 
                         VerticalOptions="StartAndExpand" Orientation="Horizontal" Margin="0,40">
                <Label
                    x:Name="Email"
                    WidthRequest="250"
                    FontSize="Title"
                    FontAttributes="Bold"
                    BackgroundColor="LightYellow"
                    TextColor="#FFDE00"
                    TextDecorations="None"
                    >
                </Label>
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"  HorizontalOptions="StartAndExpand" 
                         VerticalOptions="Start" Orientation="Horizontal">
                <Label
                    WidthRequest="100"
                    FontSize="Large"
                    Text="Gestione Account"
                    BackgroundColor="Black"
                    TextColor="#FFCCFF"
                    FontAttributes="Bold"
                    TextDecorations="None"
                    >
                </Label>
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalOptions="StartAndExpand" 
                         VerticalOptions="Start" Orientation="Horizontal" Margin="0,80">
                <Button
                    Text="Cambia password"
                    CornerRadius="40"
                    FontSize="Large"
                    FontAttributes="Bold"
                    BackgroundColor="LightYellow"
                    TextColor="#FFDE00"
                    Clicked="bottone_password"
                    >
                    
                </Button>
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalOptions="StartAndExpand" 
                         VerticalOptions="End" Orientation="Horizontal" Margin="0,90">
                <Button
                    Text="Cambia numero di telefono"
                    FontSize="Large"
                    CornerRadius="40"
                    FontAttributes="Bold"
                    BackgroundColor="LightYellow"
                    TextColor="#FFDE00"
                    Clicked="bottone_telefono"
                    >

                </Button>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>